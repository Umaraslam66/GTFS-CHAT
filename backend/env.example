# DuckDB for local dev (file-based)
DATABASE_URL=duckdb:///data/gtfs-sweden3/gtfs.duckdb
# Example Postgres (if you switch later)
# DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/gtfs_chat

# Trafiklab API key for GTFS Sweden 3 dataset
TRAFIKLAB_API_KEY=your_trafiklab_key_here

# OpenRouter settings for Google ADK agent
OPENROUTER_API_KEY=your_openrouter_key_here
# Recommended models for tool calling (better JSON support):
# - openrouter/anthropic/claude-3-haiku (good balance)
# - openrouter/google/gemini-2.0-flash-exp (free tier available)
# - openrouter/meta-llama/llama-3.1-8b-instruct:free (free, better JSON)
# - amazon/nova-2-lite-v1:free (free but may have JSON issues)
OPENROUTER_MODEL=openrouter/quasar-alpha

# Optional: model provider endpoint/name for NL â†’ SQL (placeholder)
MODEL_PROVIDER=ollama
MODEL_NAME=llama3.2

# Optional: logging level (INFO, DEBUG)
LOG_LEVEL=INFO

